{
  "github": {
    "release": true
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "commitArgs": ["--no-verify", "-n"],
    "commit": true,
    "tag": true,
    "push": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "echo 更新版本成功"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "✨ 新功能"
          },
          {
            "type": "fix",
            "section": "🐛 Bug 修复"
          },
          {
            "type": "perf",
            "section": "⚡ 性能优化"
          },
          {
            "type": "revert",
            "section": "⏪ 回退"
          },
          {
            "type": "refactor",
            "section": "♻ 代码重构"
          },
          {
            "type": "docs",
            "section": "📝 文档"
          },
          {
            "type": "style",
            "section": "💄 风格"
          },
          {
            "type": "test",
            "section": "✅ 测试"
          },
          {
            "type": "build",
            "section": "👷‍ 构建"
          },
          {
            "type": "ci",
            "section": "🔧 CI 配置"
          },
          {
            "chore": "fix",
            "section": "🎫 其他更新"
          }
        ]
      }
    }
  }
}
