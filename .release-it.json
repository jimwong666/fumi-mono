{
  "github": {
    "release": true
  },
  "git": {
    "commitMessage": "release: v${version}",
    "commitArgs": ["--no-verify", "-n"]
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "echo 更新版本成功"
  },
  "plugins": {
    "@release-it-plugins/lerna-changelog": {
      "infile": "CHANGELOG.md"
    }
  }
}
