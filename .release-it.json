{
  "github": {
    "release": false
  },
  "git": {
    "commitMessage": "chore(release): v${version}",
    "commitArgs": ["--no-verify", "-n"],
    "commit": true,
    "tag": true,
    "push": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "echo 更新版本成功",
    "after:release": "echo ${repo.host}/${repo.owner}/${repo.project}/${repo.protocol}/${repo.remote}/${repo.repository}/"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "✨ Features | 新功能"
          },
          {
            "type": "fix",
            "section": "🐛 Bug Fixes | Bug 修复"
          },
          {
            "type": "perf",
            "section": "⚡ Performance Improvements | 性能优化"
          },
          {
            "type": "revert",
            "section": "⏪ Reverts | 回退"
          },
          {
            "type": "refactor",
            "section": "♻ Code Refactoring | 代码重构"
          },
          {
            "type": "docs",
            "section": "📝 Documentation | 文档"
          },
          {
            "type": "style",
            "section": "💄 Styles | 风格"
          },
          {
            "type": "test",
            "section": "✅ Tests | 测试"
          },
          {
            "type": "WIP",
            "section": "⏳‍ Work In Progress | 工作进展中"
          },
          {
            "chore": "chore",
            "section": "🎫 Chores | 其他更新"
          }
        ]
      }
    }
  }
}
