{
	"github": {
		"release": true
	},
	"git": {
		"commitMessage": "release: v${version}",
		"commitArgs": ["--no-verify", "-n"]
	},
	"npm": {
		"publish": false
	},
	"hooks": {
		"after:bump": "echo 更新版本成功"
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": "angular",
			"infile": "CHANGELOG.md"
		}
	}
}
